class Solution(object):
    def twoSum(self, nums, target):
        indexed_nums = list(enumerate(nums))  
        indexed_nums.sort(key=lambda x: x[1]) 
        def find_pair(low, high):
            if low >= high:
                return None
            current_sum = indexed_nums[low][1] + indexed_nums[high][1]
            if current_sum == target:
                return [indexed_nums[low][0], indexed_nums[high][0]]
            elif current_sum > target:
                return find_pair(low, high - 1)
            else:
                return find_pair(low + 1, high)
        return find_pair(0, len(indexed_nums) - 1)
